<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/back_style"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#302F2F"
    android:orientation="vertical"
    tools:context=".Acceuil">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="528dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            style="@style/style_titre1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:text="Acceuil"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_ajout_acceuil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#C8AF2222"
            android:text="Ajout"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btn_edit_acceuil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#C8AF2222"
            android:text="Edit"
            app:cornerRadius="10dp" />

    </LinearLayout>
</LinearLayout>