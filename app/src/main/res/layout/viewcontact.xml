<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_contact_card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3C302F2F"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/view_contact_img"
            android:layout_width="104dp"
            android:layout_height="95dp"
            app:srcCompat="@drawable/ic_baseline_account_circle_24" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="193dp"
                android:layout_height="91dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/view_contact_name_txt"
                        android:layout_width="62dp"
                        android:layout_height="match_parent"
                        android:text="Name: "
                        android:textColor="#FAF9F9"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/view_contact_lastname_txt"
                        android:layout_width="127dp"
                        android:layout_height="match_parent"
                        android:text="LastName:"
                        android:textColor="#F3F3F3"
                        android:textSize="18sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/view_contact_num"
                    android:layout_width="189dp"
                    android:layout_height="42dp"
                    android:text="num"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="76dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/view_contact_btn_call"
                    android:layout_width="69dp"
                    android:layout_height="51dp"
                    app:srcCompat="@drawable/ic_baseline_call_24" />

                <ImageView
                    android:id="@+id/view_contact_btn_delete"
                    android:layout_width="71dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_delete_24" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>